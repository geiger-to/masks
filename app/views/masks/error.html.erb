<div class="border-b-2 border-dashed border-base-300 dark:border-neutral bg-base-100 p-4 px-6 mb-2 -mx-6 <%= local_assigns[:class] %>">
  <div class="flex items-center gap-5">
    <div class="flex-grow">
      <h1 class="text-2xl md:text-3xl font-bold text-error">
        <%= t(".openid.#{params[:error]}") %>
      </h1>

      <h2 class="text-xl">
        <%= params[:error_description] %>
      </h2>
    </div>

    <div class="avatar">
      <div class="p-2 rounded-lg">
        <%= lucide_icon('help-circle', size: 30) %>
      </div>
    </div>
  </div>
</div>
