<% if flash[:errors] || local_assigns[:errors] %>
  <div role="alert" class="bg-red-950 text-red-200 rounded-lg border-red-500 alert alert-error flex items-center <%= local_assigns[:class] %>">
    <%= lucide_icon('alert-triangle') %>
    <div>
      <h3 class="font-bold text-left mb-1"><%= local_assigns[:heading] %></h3>
      <ul class="list-disc pl-4 text-left text-sm">
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
