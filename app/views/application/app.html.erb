<style>
  .background {
    <%= @frontend_props[:bg_light] %>
  }

@media (prefers-color-scheme: dark) {
  .background {
    <%= @frontend_props[:bg_dark] %>
  }
}
</style>

<%= content_tag :div, "", id: "app", class: 'h-full' %>

<%= javascript_tag("window.APP = #{frontend_json}") %>

<% content_for :head do %>
  <%= vite_javascript_tag 'app' %>
<% end %>

<% content_for :styles do %>
  <%= vite_stylesheet_tag 'app.css' %>
<% end %>
